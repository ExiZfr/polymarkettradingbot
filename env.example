# --- Supabase (Database & Auth) ---
NEXT_PUBLIC_SUPABASE_URL=https://votre-projet.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=votre-cle-anon-publique

# --- Telegram Bot (Authentication) ---
# Le nom d'utilisateur du bot sans le @ (ex: PolyMarketTradingBot)
NEXT_PUBLIC_BOT_USERNAME=NomDeVotreBot
# Le token secret donné par BotFather
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
# Votre Telegram ID personnel (pour recevoir les notifications)
# Trouvez-le en envoyant /start à @userinfobot
OWNER_TELEGRAM_ID=123456789

# --- Security ---
# Une longue chaîne aléatoire pour chiffrer les cookies de session (optionnel pour l'instant)
SESSION_SECRET=une_phrase_secrete_tres_longue_et_aleatoire

# --- Whale Tracker ---
# Polygon RPC WebSocket URL (Alchemy or Infura)
# Get one at: https://dashboard.alchemy.com/ or https://infura.io/
POLYGON_RPC_WSS=wss://polygon-mainnet.g.alchemy.com/v2/YOUR_ALCHEMY_KEY

# Whale Tracker Mode: "production" (real blockchain) or "simulation" (mock data)
WHALE_TRACKER_MODE=simulation

# Minimum amount in USD to consider as whale transaction
MIN_WHALE_AMOUNT=1000
